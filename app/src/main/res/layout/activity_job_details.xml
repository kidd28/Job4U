<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JobDetailsActivity">

    <!-- CardView for the job post to create a material card-like appearance -->

    <androidx.cardview.widget.CardView
        android:id="@+id/jobDetailsCard"
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_8sdp">

                    <!-- Job Title -->
                    <TextView
                        android:gravity="center"
                        android:id="@+id/jobTitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Job Title"
                        android:textSize="@dimen/_18sdp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp"
                        android:ellipsize="end"
                        android:maxLines="1" />

                    <!-- Company Name -->
                    <TextView
                        android:gravity="center"
                        android:id="@+id/companyNameText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Company Name"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp"
                        android:ellipsize="end"
                        android:maxLines="1" />

                    <!-- Job Description -->
                    <!-- Job Description -->
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Job Description"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp"
                        android:maxLines="3"
                        android:ellipsize="end" />
                    <TextView
                        android:layout_marginStart="@dimen/_12sdp"
                        android:id="@+id/jobDescriptionText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Job Description"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp"
                        android:maxLines="3"
                        android:ellipsize="end" />

                    <!-- Location -->
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp" />
                    <TextView
                        android:layout_marginStart="@dimen/_12sdp"
                        android:id="@+id/jobLocationText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp" />

                    <!-- Salary -->
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Salary"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp" />
                    <TextView
                        android:layout_marginStart="@dimen/_12sdp"
                        android:id="@+id/salaryText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Salary"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp" />

                    <!-- Job Type -->
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Job Type"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp" />
                    <TextView

                        android:layout_marginStart="@dimen/_12sdp"
                        android:id="@+id/jobTypeText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Job Type"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp" />

                    <!-- Requirements -->
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Requirements"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp" />
                    <TextView
                        android:layout_marginStart="@dimen/_12sdp"
                        android:id="@+id/requirementsText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Requirements"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp" />

                    <!-- Posted On -->
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Posted On"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp" />
                    <TextView
                        android:layout_marginStart="@dimen/_12sdp"
                        android:id="@+id/postedOnText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Posted On"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp" />


                </LinearLayout>
            </ScrollView>
            <!-- Inside the CardView -->

            <LinearLayout
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_15sdp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/close_button"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:text="Close Job"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12sdp"
                    app:backgroundTint="@color/black"
                    app:cornerRadius="@dimen/_14sdp" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/open_button"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:text="Open Job"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12sdp"
                    app:backgroundTint="#4CAF50"
                    app:cornerRadius="@dimen/_14sdp" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/delete_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="Delete Job"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12sdp"
                    app:backgroundTint="#9C0000"
                    app:cornerRadius="@dimen/_14sdp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>