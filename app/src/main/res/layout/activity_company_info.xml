<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Authentication.CompanyInfo">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/_25sdp">
        <TextView
            android:id="@+id/sign_up_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:shadowColor="#0B0B0B"
            android:layout_marginBottom="@dimen/_10sdp"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:text="Sign Up"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />
        <!-- Company Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/company_name_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/company_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company Name"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:padding="@dimen/_12sdp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Company Email -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/company_email_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/company_email_input"
                android:layout_width="match_parent"
                android:focusable="false"
                android:layout_height="wrap_content"
                android:hint="Company Email"
                android:inputType="textEmailAddress"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:padding="@dimen/_12sdp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Company Phone Number -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/company_phone_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/company_phone_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company Phone Number"
                android:inputType="phone"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:padding="@dimen/_12sdp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Company Website -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/company_website_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/company_website_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company Website (optional)"
                android:inputType="textUri"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:padding="@dimen/_12sdp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Industry/Category -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/industry_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/industry_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Industry/Category"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:padding="@dimen/_12sdp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Company Description -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/company_description_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/company_description_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|start"
                android:hint="Company Description"
                android:inputType="textMultiLine"
                android:lines="5"
                android:maxLines="10"
                android:padding="@dimen/_12sdp"
                android:scrollbars="vertical"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/Save"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:text="Save"
        android:layout_centerInParent="true"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:backgroundTint="#0482E6"
        app:cornerRadius="16dp" />
</RelativeLayout>